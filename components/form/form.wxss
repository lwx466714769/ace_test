/* components/form/form.wxss */
.form{
  padding: 30rpx;
}
/* input */
.item{
  height: 100rpx;
  line-height: 100rpx;
  border-top: solid 2rpx rgb(242, 242, 242);
  display: flex;
  align-items: center;
}
.item-name{
  width: 180rpx;
  margin-right: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-input{
  flex: 1;
}
.arrow{
  width:12rpx;
  height: 12rpx;
  border-top: solid 2rpx #333;
  border-right: solid 2rpx #333;
  transform: rotate(45deg);
  margin-left: 10rpx;
}
.textarea-wrap{
  border-top: solid 2rpx rgb(242, 242, 242);
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}
.item-textarea{
  flex: 1;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border:solid 2rpx #eee;
  box-sizing: 8rpx;
}
/* checkbox */
.checkbox-list{
  display: flex;  
  padding: 30rpx 0;
}
.checkbox-item{
  display: flex;
  margin-right: 30rpx;
}
.checkbox{
  width: 30rpx;
  height:30rpx;
  margin-right: 16rpx;
}
/* 上传图片 */
.img-wrap{
  padding: 30rpx 0;
}
.wx-img-bg{
  width: 200rpx;
  height: 200rpx; 
  margin-top: 30rpx;
}
.wx-img-box {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right:16rpx;
  margin-bottom: 16rpx;
}

.wx-img-box:last-child {
  margin: 0;
}

.wx-img-item {
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
}
.img-close {
  position:absolute;
  top:10rpx;
  right:10rpx;
  width:40rpx;
  height:40rpx;
  border-radius:50%;
}
.submit-btn{
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: #000;
  color: #fff;
}
/* 选择其他 */
.filter-wrap{
  position: fixed;
  bottom: 0;
  left: 0;
  top: 0;
  right: 0;
  z-index: 200;
  width:100%;
  background: rgba(0,0,0,.5);
}
.filter-type{
  width: 100%;
  height: 292rpx;
  background: #292929;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  color: #fff;
}
.filter-title{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: solid 2rpx rgb(246,246,246);
}
.filter-list{
  height: 350rpx;
  overflow-y: scroll;
}
.filter-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: solid 2rpx #525252;
}
.checked{
  width: 40rpx;
  height: 40rpx;
}