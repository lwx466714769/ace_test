.mask {
  position: fixed;
  z-index: 100;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
}

.confirm {
  position: fixed;
  z-index: 500;
  width: 80%;
  max-width: 600rpx;
  top: 22vh;
  background: #fff;
  opacity: 0.96;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 4rpx 4rpx 30rpx #c0c0c0;
}

.title {
  font-size: 28rpx;
  padding: 36rpx 0;
  background-color: #2a2a2a;
  color: #fff;
  text-align: center;
}

.container {
  display: flex;
  justify-content: center;
}

.header {
  position: relative;
}

.wrapper {
  position: relative;
  padding: 46rpx 30rpx 62rpx;
}

.verify {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 12rpx;
  color: #2a2a2a;
}

.item {
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 60rpx;
}

.item__image {
  width: 30rpx;
  height: 39rpx;
  margin-right: 20rpx;
}

.item__input {
  padding: 6rpx 0;
}

.placeholder {
  font-size: 14px;
  color: #d4d3d6;
}

.error__phone {
  position: absolute;
  left: 52rpx;
  bottom: -40rpx;
  color: #fb2d2d;
  font-size: 24rpx;
  transition: all 0.3s ease-in;
}

.handle-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  color: #fff;
  background-color: #2a2a2a;
  border-radius: 40rpx;
  margin: 0;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.close-btn {
  position: absolute;
  top: 26rpx;
  right: 20rpx;
  color: #fff;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  font-size: 48rpx;
  justify-content: center;
  align-items: center;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
