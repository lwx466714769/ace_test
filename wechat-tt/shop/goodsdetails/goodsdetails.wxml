    <view catchtap='cancelOrder' class='btn-small'>取消订单</view>
    <view catchtap='applyCard' class='btn-big' data-id='{{order.orderId}}'>去付款</view>
  </view>
  <view wx:elif='{{order.orderState == 2}}' class='btn-group'>
