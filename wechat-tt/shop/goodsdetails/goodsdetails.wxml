      <view catchtap='cancelOrder' class='btn-small'>取消订单</view>
      <view catchtap='applyCard' class='btn-big' data-id='{{order.orderId}}'>去付款</view>
  </view> -->
  <view wx:if='{{refundInfo&&refundInfo.status==0}}' class='btn-group'>
    <view class='btn-small' catchtap='goRefund'>查看退款</view>
    <view catchtap='cancelRefund' class='btn-big' data-id='{{order.orderId}}'>取消退款</view>
  </view>
  <view wx:elif='{{refundInfo&&refundInfo.status==2}}' class='btn-group'>
    <navigator url='/shop/carddetails/carddetails?cardId={{order.productId}}' class='btn-big'>重新下单</navigator>
  </view>
  <!-- <view wx:elif='{{goods&&goods.status==1}}' class='btn-group'>
    <view class='btn-big' catchtap='goApplyRefund'>退款</view>
  </view> -->
  <view wx:elif='{{goods&&(goods.status==2||goods.status==3)}}' class='btn-group'>
    <!-- <view class='btn-small' catchtap='goApplyRefund'>退款</view> -->
    <view class='btn-big' catchtap='confirmGoods'>确认收货</view>
  </view>
  <view wx:elif='{{goods&&goods.status==7}}' class='btn-group'>
     <navigator url='/shop/carddetails/carddetails?cardId={{order.productId}}' class='btn-big'>再次购买</navigator>
  </view>
</view>
<view wx:else class="footer">  
