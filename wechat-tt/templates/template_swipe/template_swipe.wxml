<template name='Swipe'>
  <view class='swipe_wrap'>
    <view class='swipe_top'>
      <view>Mall<text style='font-size: 28rpx; margin-left:10rpx;'>商城</text><text style='font-size: 28rpx; margin-left:10rpx;float:right;margin-right:30rpx' data-i='1' catchtap='ticketTap' >全部商品</text></view>
      
    </view>
    <view class='swipe_content'>
      <swiper class='swiper_card_wrap' autoplay="{{eventData.length > 2 ? true : flase}}" interval="3000" duration="200" circular='{{eventData.length > 2 ? true : flase}}' next-margin="{{eventData.length === 0 ? '0rpx':'360rpx'}}">
        <block wx:for="{{cards}}" wx:key='cards'>
          <navigator url='/shop/carddetails/carddetails?cardId={{item.relateId}}'>
            <swiper-item class="slide-item slide" style='height:auto;'>
              <view class='swiper_double'>
                <image src="{{item.imageUrl}}" class="slide-image" mode='aspectFill' />
                <view class='imgDescription'>{{item.name}}</view>
              </view>
            </swiper-item>
          </navigator>
        </block>
      </swiper>
    </view>
  </view>
</template>