.banner_content{
  width:100%;
}

.banner_wrap{
  display: flex;
  justify-content: space-between; 
}
.swiper_even{
  width: 672rpx;
  height: 336rpx;
  border-radius: 16rpx;  
  margin:0 auto;
}
.active{ 
  transform: scale(1); 
  transition:all .2s ease-in 0s;
}

.banner_image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.swiper_banner_wrap{
  height: 336rpx;
  overflow: hidden;
}

.dot.active {
  width: 16rpx;
  height: 4rpx;
  border: none;
  /* background-color: rgb(180, 28, 28); */
}

.dots {
  height: auto;
  display: flex;
  flex-direction: column;
  width: 20rpx;
  margin-right: 30rpx;
}

.dot {
  width: 16rpx;
  height: 4rpx;
  margin-bottom: 14rpx;
  border: 1rpx solid rgba(153, 153, 153,.5);
  background-color: white;
  box-sizing: border-box;
}

.navigate{
   position: absolute;
   top: 250rpx;
   right: -92rpx;
   color: #009FE8;
   border:solid 1rpx #009FE8;
   border-radius: 30rpx;
   width: 146rpx;
   height: 60rpx;
   line-height: 60rpx;
   z-index: 2;
   background: #EBF6FE;
   padding-left: 30rpx;
}
.icon-navigate{
  width: 132rpx;
  height: 98rpx;
  position: absolute;
  top: -24rpx;
  right:1;
  z-index: 3;
}