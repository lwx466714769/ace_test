<template name='Banner'>
   <view class='banner_wrap'>
      <view class='banner_content'>
         <swiper class='swiper_banner_wrap' autoplay="{{true}}" circular='{{true}}' interval="4500" duration="200" current="{{currentSwiper}}" bindanimationfinish="swiperChange" easing-function='easeInOutCubic'
         indicator-dots="true"
         >
            <swiper-item wx:for="{{infoBanner}}" wx:key='infoBanner' item-id="{{item.relateId}}" class="ace_swiperItem">
               <navigator url='/pages/post-detail/post-detail?postId={{item.relateId}}' wx:if='{{item.feedType=="POST"}}'>
                  <view class='swiper_even {{currentSwiper==index?"active":""}}'>
                     <image src="{{item.imageURL}}" lazy-load='{{true}}' mode='aspectFill' class="banner_image" />
                  </view>
               </navigator>   
               <navigator url='/shop/carddetails/carddetails?cardId={{item.relateId}}' wx:elif='{{item.feedType=="COMMODITY"}}'>
                  <view class='swiper_even'>
                     <image src="{{item.imageURL}}" lazy-load='{{true}}' mode='aspectFill' class="banner_image" />
                  </view>
               </navigator>
               <navigator url='/event/event-detail/event-detail?activityId={{item.relateId}}' wx:elif='{{item.feedType=="ACTIVITY"}}'>
                  <view class='swiper_even'>
                     <image src="{{item.imageURL}}" lazy-load='{{true}}' mode='aspectFill' class="banner_image" />
                  </view>
               </navigator>
            </swiper-item>    
         </swiper>
      </view>
      <!-- <view class="dots">
         <block wx:for="{{infoBanner}}" wx:key='infoBanner'>
            <view class="dot{{index == currentSwiper ? ' active mainColor' : ''}}"></view>
         </block>
      </view> -->
   </view>
</template>