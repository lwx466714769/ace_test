/* game/final-date/final-date.wxss */
.final-date{
  padding: 30rpx;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}
.picker{
  padding-left: 20rpx;
}
.date{
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #666;
  overflow: hidden;
}
.left{
  float: left;
}
.right{
  float: right;
}
.change{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: rgb(153,153,153);
}
.arrow{
  width:10rpx;
  height: 10rpx;
  border-top: solid 2rpx #999;
  border-right: solid 2rpx #999;
  transform: rotate(45deg);
  margin: 0 8rpx;
}
/* footer */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.button{
  margin: 0;
}