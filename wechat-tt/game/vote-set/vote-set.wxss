/* game/vote-set/vote-set.wxss */
.padding-border{
  padding: 30rpx;
  border-bottom: solid 2rpx rgb(246,246,246);
}
.arrow{
  width:10rpx;
  height: 10rpx;
  border-top: solid 2rpx #999;
  border-right: solid 2rpx #999;
  transform: rotate(45deg);
  margin: 0 8rpx;
}
.change{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: rgb(153,153,153);
  margin-top: 10rpx;
}
.party-block{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}
.input{
  flex:1;
  text-align:right;
  margin-left:50rpx;
}
.left{
  float: left;
}
.right{
  float: right;
}
.expire{
  overflow: hidden;
}

/* 单选项 */
.radio-group{
  margin-top: 30rpx;
}
.radio-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  color: #999;
}
.radio-item:last-child{
  margin-bottom: 0;
}
.active{
  color: #000;
}
.radio{
  transform: scale(.5);
}
/* footer */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.button{
  margin: 0;
}