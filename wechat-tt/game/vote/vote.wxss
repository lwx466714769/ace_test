/* game/party/party.wxss */
.party{
  /* color: rgb(153,153,153); */
  padding-bottom: 120rpx;
}
.padding-border{
  padding: 30rpx;
  border-bottom: solid 2rpx rgb(246,246,246);
  box-sizing: border-box;
}
.arrow{
  width:10rpx;
  height: 10rpx;
  border-top: solid 2rpx #999;
  border-right: solid 2rpx #999;
  transform: rotate(45deg);
  margin: 0 8rpx;
}
.header{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 0 10rpx 3rpx inset rgb(246,246,246);
}
.header-name{
  padding: 40rpx 30rpx 30rpx;
}
.icon-background{
  width: 40rpx;
  height: 31rpx;
  padding: 40rpx 30rpx 30rpx;
}
.background-view{
  position: relative;
}
.icon-close{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border:solid 4rpx #fff;
}
.change{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: rgb(153,153,153);
  margin-top: 10rpx;
}
.text24{
  font-size: 24rpx;
  margin-bottom: 30rpx;
  color: rgb(153,153,153);
}
.area{
  width: 100%;
  height: 246rpx; 
  font-size: 30rpx;
  padding: 40rpx 30rpx 40rpx 60rpx;
  box-sizing: border-box;
  box-shadow: 0 6rpx 10rpx 6rpx rgb(246,246,246);
}
.title{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  padding: 40rpx 30rpx 30rpx;
  box-shadow: 0 0 10rpx 3rpx inset rgb(246,246,246);
}
.party-block{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.upload-background{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.upload-right{
  display: flex;
  align-items: center;
}
.upload-img{
  width: 100%;
  height: 420rpx;
}
.party-types .title{
  margin-bottom: 20rpx;
}
.types{
  display: flex;
  justify-content: space-around;
}
.party-type{
  display: flex;
  border: solid 2rpx rgba(153,153,153,.5);
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  color: rgb(153,153,153);
}
.active{
  border:solid 2rpx #000;
  color: #000;
}
.type-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.party-date{
  box-shadow: 0 6rpx 10rpx 6rpx rgb(246,246,246);
}
.date{
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #000;
  overflow: hidden;
}
.left{
  position: absolute;
  left: 0;
}
.right{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  color: rgb(153,153,153);
  text-align: right;
}
.right .arrow{
  margin-left: 20rpx;
  float: right;
  margin-top: 20rpx;
}
.set{
  padding: 30rpx 30rpx 30rpx 60rpx;
  color: rgb(102,102,102);
}
.set-block{
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
}
.input{
  display: inline-block;
}
.switch{
  transform: scale(.8);
  margin-right: -10rpx;
}
.background{
  height: 386rpx;
  border:dashed 2rpx #ccc;
  position: relative;
  text-align: center;
  margin: 20rpx 30rpx;
}
.back-img{
  width: 100%;
  height: 100%;
}
.upload{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.icon-photo{
  width: 70rpx;
  height: 48rpx;
  margin:0 auto;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.button{
  margin: 0;
}
.vote-type{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 0 60rpx;
}
.vote-type-name{
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}
.vote-index{
  margin-right: 26rpx;
}
.vote-img{
  width: 114rpx;
  height: 64rpx;
  margin-right: 30rpx;
}
.type-name{
  flex: 1;
  font-size: 28rpx;
}
.add-item-type{
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding:30rpx;
  color: #999;
}
.icon-change{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}