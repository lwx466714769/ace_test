<view class='party'>
  <view class="header">
    <view class="header-name">投票主题</view>
    <image wx:if='{{!background}}' mode="aspectFit" catchtap='uploadImage' class="icon-background" src="/images/icon-photo-upload.png"></image>
  </view> 
  <view wx:if='{{background}}' class="background-view">
    <image class='upload-img' src='{{background}}' mode='aspectFill'></image>
    <image catchtap="delBackground" src="/images/icon-close.png" class="icon-close"></image>
  </view>
  <textarea class='area' bindinput='changeVoteName' placeholder='在这里输入投票主题'></textarea>
