  <!-- 投票选项 -->
  <view class='party-date'>
    <view class='title'>投票选项</view>
    <view catchtap='toVoteItem' data-index='{{index}}' wx:for='{{voteItemType=="WORDIMAGE"?wordImgList:wordList}}' wx:key='index' class='vote-type'>
      <view class='vote-type-name'>
        <view class="vote-index">{{index+1}}</view>
        <image wx:if='{{item.voteItemImage[0]}}' class='vote-img' mode='aspectFill' src='{{item.voteItemImage[0]}}'></image>
        <view class='type-name'>{{item.voteItemStr}}</view>
      </view>
      <image data-index='{{index}}' class='icon-change' src='/images/jian@3x.png' catchtap='delVoteItem'></image>
    </view>
    <!-- wx:if='{{voteItemType=="WORDIMAGE"?wordImgList.length<10:wordList.length<10}}' -->
    <view class='add-item-type' catchtap='addVoteItem'>
      <view>点击添加一个投票项</view> 
      <image class='icon-change' src='/images/jia@3x.png'></image>
    </view>
  </view>
  <view class="title">投票设置</view>
  <view class="set">
    <picker mode='multiSelector' value='{{dateTime}}' bindchange='changeExpire'  bindcolumnchange="bindColumnChange" range='{{dateTimeArray}}' class='set-block expire' start='2019-05-23'>
      <view class='left'>投票有效期</view>
      <view class='right'>
          <text>{{joinEndTime?joinEndTime:"请选择"}}</text>  
          <view class='arrow'></view>
        </view>
    </picker>
    <view class="set-block">
      <view class="left">可投选项数量</view>
      <view class="right">
        <input class='input' value='{{maxSelectItem}}' bindinput='changeMaxSelect' type='number' placeholder='请输入大于0的整数'></input>
        <view class='arrow'></view>
      </view>
    </view>
    <view class="set-block">
      <view class="left">仅限会员投票</view>
      <view class="right">
        <switch class="switch" bindchange="switchMember"></switch>
      </view>
    </view>
    <view class="set-block">
      <view class="left">投票前查看投票结果</view>
      <view class="right">
        <switch class="switch" bindchange="switchResult"></switch>
      </view>
    </view>
  </view>
  
