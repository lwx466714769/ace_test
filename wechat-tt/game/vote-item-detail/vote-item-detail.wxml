<!--game/vote-item-detail/vote-item-detail.wxml-->
<view class='vote-item-detail'>
  <!-- <image wx:if='{{party.background}}' class='party-img' mode='aspectFill' src='{{party.background}}'></image> -->
  <view wx:if='{{isShare}}' class="item-header">
    <view class='user-info'>
      <view class="user-name">
        <image class='user-header-head' src='{{party.userLogo}}'></image>
        <view>
          <view>{{party.userName}}</view>
          <!-- <view class='fans'>粉丝 222</view> -->
        </view>
      </view>
      <navigator class='back-item-list' url='/game/vote-detail/vote-detail?voteId={{party.voteId}}'>查看详情</navigator>
    </view>
    <!-- 主题 -->
    <view class='party-info'>
      <view class='content'>{{party.name}}</view>
      <view class='party-time'>
        <view>发布于{{party.createAt}}</view>
        <!-- <view wx:if='{{userId == party.userId}}' catchtap='delParty'>删除</view>
        <view wx:else catchtap='toReport'>举报</view> -->
        <view class='expire'>有效期至{{party.joinEndTime}}</view>
      </view>
    </view>
  </view>
  <view class='vote-item'>
    <!-- <view class='user-info'>
      <view class="user-name">
        <image class='user-head' src='{{party.userLogo}}'></image>
        <view>{{party.userName}}</view>
      </view>
    </view> -->
    <view class='item-title'>
      <view>{{curItem.voteItemStr}}</view>
      <!-- <navigator class='back-item-list' url='/game/vote-detail/vote-detail?voteId={{party.voteId}}'>返回选项列表</navigator> -->
    </view>
    <view wx:for='{{curItem.voteItemImage}}' wx:key='index' class='item-list'>
      <image catchtap="preview" data-url='{{item}}' data-imgs='{{curItem.voteItemImage}}' mode='widthFix' class='item-img' src='{{item}}'></image>
    </view>
  </view>
</view>
<!-- footer -->
<view class='footer'>
  <view class='opration-group'>
    <view class='equip-opration' data-type='vote' catchtap='showShare'>
      <image class='icon-share' src='/images/icon-share-profile.png'></image>
      <view></view>
    </view>
  </view>
  <view class='btn-group'>
    <button wx:if='{{curDate>joinEndTime}}' class='btn btn-join btn-gray'>已结束</button>
    <button wx:elif='{{voteCount.partyState}}' class='btn btn-join btn-gray'>
      您已投票
    </button>
    <button open-type='getUserInfo' bindgetuserinfo='toVote' wx:else class='btn btn-join'>
      投票
    </button>
  </view>
</view>
<BackendModal id='backendModal' modal='{{modal}}'/>
<Share id='share' shareparams='{{party}}' sharetype='vote'/>
<canvas canvas-id="myCanvas" style="position:absolute;left:-200%;width:100%;height:420rpx;"></canvas>