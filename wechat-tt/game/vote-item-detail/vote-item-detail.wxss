/* game/vote-item-detail/vote-item-detail.wxss */
button{
  font-size: 28rpx;
  background: none;
  padding: 0;
  margin: 0;
  line-height: inherit;
  -webkit-tap-highlight-color:transparent;
}
.vote-item-detail{
  padding-bottom:120rpx;
}

.vote-item{
  padding: 30rpx;
}
.item-title{
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}
.back-item-list{
  color: #3B94FD;
  text-decoration: underline;
}
.item-img{
  width: 100%;
  margin: 10rpx 0;
}
/* footer */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.opration-group{
  display: flex;
  justify-content: space-around;
  flex: 1;
}
.equip-opration{
  display: flex;
  align-items: center;
}
.icon-share{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.btn-group{
  width: 560rpx;
  /* flex: 1; */
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  border:solid 2rpx #000;
}
.btn{
  flex: 1;
  border-radius: 0;
}
.btn-join{
  background: #000;
  color: #fff;
  font-size: 32rpx;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.btn-gray{
  color: #999;
}

/* header */
.item-header{
  margin: 30rpx;
  box-shadow: 0 2rpx 6rpx rgb(220,220,220);
  border-radius: 16rpx;
  padding: 30rpx;
}
.user-header-head{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.party-img{
  width: 100%;
  height: 420rpx;
}
.user-info{
  display: flex;
  align-items: center;
  /* border-bottom: solid 2rpx rgb(246,246,246); */
  margin-bottom: 30rpx;
  justify-content: space-between;
}
.user-name{
  display: flex;
  align-items: center;
}
.user-head{
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.fans{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.party-info{
  font-size: 24prx;
  color: rgb(153,153,153);
}
.party-time{
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}
.content{
  font-size: 28rpx;
  margin-bottom: 30rpx;
  color: rgb(102,102,102);
}
.expire{
  text-align: right;
}