/* game/add-voteItem/add-voteItem.wxss */
.area{
  width: 100%;
  height: 166rpx; 
  padding: 30rpx;
  border-bottom: solid 2rpx rgb(246,246,246);
}
.img-wrap{
  padding:30rpx;
}
.wx-img-bg{
  width: 200rpx;
  height: 200rpx; 
}
.wx-img-box {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right:16rpx;
  margin-bottom: 16rpx;
}
.wx-img-box:last-child {
  margin: 0;
}
.wx-img-item {
  width: 100%;
  height: 100%;
}
.img-close {
  position:absolute;
  top:10rpx;
  right:10rpx;
  width:40rpx;
  height:40rpx;
  border-radius:50%;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.button{
  margin: 0;
}