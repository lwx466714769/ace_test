/* equip/my-equip.wxss */
.my-equip{
  padding-bottom: 120rpx;
  position: relative;
}
.myequip-item{
  border-bottom: solid 2rpx #eee;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.myequip-img-wrap{
  position: relative;
  width: 256rpx;
  height: 144rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background: #e6e6e6;
}
.myequip-img{
  width: 256rpx;
  height: 144rpx;
  border-radius: 8rpx;  
}
.equip-default{
  width: 80rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.check-mark{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background:rgba(0,0,0,.4);
  height: 32rpx;
  line-height: 32rpx;
  color:#fff;
  font-size:20rpx;
  text-align: center;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.check-mark:before{
  position: absolute;
  content: '';
  width: 10rpx;
  height: 10rpx;
  background: #4196fa;
  top: 11rpx;
  left: 50%;
  margin-left: -50rpx;
  border-radius:5rpx;
}
.myequip-name{
  max-height: 80rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  overflow: hidden;
  flex: 1;
  display:-webkit-box;
}
.myequip-right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.btn-wrap{
  display: flex;
  justify-content: flex-end;
}
.equip-btn{
  color: #fff;
  background: #000;
  width: 140rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 20rpx;
}
.btn-gray{
  border: solid 2rpx #aaa;
  color: #aaa;
  background: #fff;
  line-height: 40rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.button{
  margin: 0;
}

/* 空的 */
.equip-empty{
  width: 100%;
  color: #aaa;
  text-align: center;
  margin-top: 200rpx;
}
.empty-img{
  width: 110rpx;
  height: 124rpx;
  margin-bottom: 40rpx;
  margin:0 auto 40rpx;
}
