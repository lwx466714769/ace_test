/* equip/brand-model/brand-model.wxss */
.brand-model{
  width: 100%;
  height: 100%;
}
.add-type{
  text-align: right;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx 20rpx 0;
  align-items: center;
  height:80rpx;
  box-sizing:border-box;
}
.model-list{
  height: calc(100% - 80rpx);
}
.answer{
  width: 34rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  margin-left: 20rpx;
  border: solid 2rpx #000;
  border-radius: 50%;
}
.model-item{
  padding: 40rpx 60rpx;
  display: flex;
  align-items: center;
}
.model-img{
  width: 100%;
  height: 100%;
}
.equip-img-wrap{
  position: relative;
  width: 210rpx;
  height: 105rpx;
  margin-right: 30rpx;
}
.img-wrap-gray{
  background: #e6e6e6;
}
.equip-default{
  width: 66rpx;
  height: 50rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.model-name{
  color: rgb(102,102,102);
}

/* 创建装备 */
.create-wrap{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(0,0,0,.5);
  z-index: 999;
}
.create-content{
  width: 530rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: rgb(237,237,237);
  border-radius: 8rpx;
}
.create-font{
  width: 100%;
  text-align: center;
  position: absolute;
  top: -66rpx;
  font-size: 32rpx;
  color: #fff;
}
.create-header{
  width: 530rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx 10rpx;
  position: relative;
}
.create-background{
  width: 100%;
  height: 260rpx;
  background:-webkit-linear-gradient(top,#fff,#ccc);
}
.back-img{
  width: 100%;
  height: 260rpx;
}
