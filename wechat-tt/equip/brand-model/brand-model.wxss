.create-img-wrap{
  width: 100%;
  height: 212rpx;
  overflow: hidden;
  transform: translateY(-10rpx);
  background: #fff;
}
.create-img{
  width: 100%;
  height: 212rpx;
}
.btn-modal-group{
  display: flex;
  border-top: solid 2rpx rgb(242,242,242);
  height: 90rpx;
  line-height: 90rpx;
  align-items: center;
  text-align: center;
  background: #fff;
}
.btn-modal{
  width: 100%;
  height: 100%;
  flex: 1;
  font-size: 34rpx;
  color: #aaa;
}
.btn-success{
  color:rgb(59, 148, 253);
  border-left: solid 2rpx rgb(242,242,242);
}
.create-con{
  padding: 20rpx;
  background: #fff;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  transform: translateY(-10rpx);
  box-shadow: 0 0 5rpx 1rpx rgba(0,0,0,.1);
}
.move-bar{
  width: 52rpx;
  height: 6rpx;
  border-radius: 5rpx;
  margin: 0 auto 20rpx;
  background: rgba(51,51,51,.2);
}
.user-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  color: rgb(153,153,153);
}
.user-info{
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #999;
}
.equip-avatar{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.create-name{
  margin-bottom: 20rpx;
  font-size: 20rpx;
}
.equip-type{
  margin-bottom: 20rpx;
  display: flex;
  font-size: 20rpx;
}
.type-name{
  width: 150rpx;
  padding-left: 14rpx;
  box-sizing: border-box;
  position: relative;
  color: rgb(153,153,153);
}
.type-name:after{
  content: '';
  width: 4rpx;
  height: 12rpx;
  background: rgb(59,148,253);
  position: absolute;
  left: 0;
  top: 10rpx;
}
.type-con{
  flex: 1;
}