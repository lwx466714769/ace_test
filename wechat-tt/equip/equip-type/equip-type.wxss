/* equip/equip-type/equip-type.wxss */
.type-list{
  width: 686rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx auto;
}
.type-item{
  width: 342rpx;
  height: 342rpx;
  margin-right: 2rpx;
  margin-bottom: 2rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}
.type-item:nth-child(2n){
  margin-right: 0;
}
.type-bg{
  width: 100%;
  height: 100%;
}
.type-name{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 342rpx;
  line-height: 342rpx;
  background: rgba(0,0,0,.5);
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}