/* equip/equip/equip.wxss */
@import '/template/post.wxss';
.icon-join{
  width: 112rpx;
  height: 112rpx;
  position: fixed;
  right: 40rpx;
  bottom: 180rpx;
  z-index: 2;
}
.icon-join image{
  width: 112rpx;
  height: 112rpx;
}
/* 数据为空 */
.empty-wrap{
  color: rgb(153, 153, 153);
  text-align: center;
  margin: 150rpx auto 0;
  font-size: 28rpx;
}
.icon-empty-default{
  width: 112rpx;
  height: 112rpx;
  margin-bottom: 20rpx;
}
/* 是否显示全部 */
.show-all{
  text-align: center;
  color: rgb(153, 153, 153);
  padding: 30rpx;
}
.slot{
  width:100%;
  height: 12rpx;
  background: rgb(246, 246, 246);
}
.equip-title{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  color: #999;
}
.filter{
  display: flex;
  align-items: center;
}
.icon-filter{
  width: 30rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
.checked{
  display: flex;
  align-items: center;
  color: #333;
}
.check{
  display: flex;
  align-items: center;
  color: #aaa;
}
.check-img{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  border:solid 2rpx #aaa;
}

