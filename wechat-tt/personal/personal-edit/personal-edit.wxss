/* profile/pages/modify/modify.wxss */
.modify{
  width: 100%;
  height: 100%;
  position: relative;
}
.head{
  padding: 80rpx  0 20rpx 0;
  text-align: center;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.btn-modify{
  text-align: center;
  color: rgb(153, 153, 153);
  margin-top: 20rpx;
}
.block{
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 40rpx;
  border-bottom: solid 2rpx rgb(242, 242, 242);
}
.input{
  text-align: right;
  margin-right: 14rpx;
  flex: 1;
}
.area{
  width:100%;
  height: 180rpx;
  background: rgb(249, 249, 249);
  padding: 30rpx 50rpx;
  box-sizing: border-box;
}
