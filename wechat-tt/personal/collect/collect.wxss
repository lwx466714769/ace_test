/* profile/collect/collect.wxss */
@import '../../template/post.wxss';
.tab-class{
  width: 100%;
  position: fixed;
}
.empty-wrap{
  margin-top: 400rpx;
}
.collect{
  padding-top: 86rpx;
}
/* 收藏帖子 */
.welfare{
  padding:30rpx;
  border-bottom: solid 2rpx rgb(242, 242, 242);
}

.short-content{
  display: flex;
  justify-content: space-between;
}
.short-content .post-title{
  flex: 1;
  font-size: 28rpx;
  max-height: 78rpx;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  overflow: hidden;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  word-break:break-all;
  line-height: 38rpx;
  letter-spacing: 2rpx;
}
.post-right{
  width: 250rpx;
  height: 140rpx;
  border: solid 2rpx #f9f9f9;
  margin-left: 30rpx;
}
.short-content .img{
  width: 250rpx;
  height: 140rpx;
}
.post-left{
  display: flex;
  flex-direction: column;
  height: 140rpx;
  justify-content: space-between;
  flex: 1;
}
.nickname{
  color: #999;
}
/* 俱乐部 */
.list{
  display: flex;
  position: relative;
  padding: 30rpx 0;
  margin: 0 30rpx;
  box-sizing: border-box;
  border-bottom: solid 2rpx rgb(242, 242, 242);
  justify-content: space-between;
  align-items: center;
}
.left{
  display: flex;
  align-items: center;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.info{
  flex: 1;
  margin:0 20rpx;
}
.name{
  font-size: 32rpx;
}
.address{
  font-size: 24rpx;
  color: rgb(153, 153, 153);
}
.des{
  font-size: 24rpx;
  color: rgb(51,51,51);
  letter-spacing: 2rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  overflow: hidden;
  max-height:  68rpx;
}
/* 收藏活动 */
.event-item{
  margin: 30rpx;
  padding: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(165,165,165,.2);
}
.event-img-wrap{
  width: 100%;
  height: 364rpx;
  position: relative;
}
.event-img{
  width: 100%;
  height: 100%;
}
.event-state{
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  background: #000;
  color: #fff;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
}
.state-start{
  background: rgb(208,2,27);
}
.event-date{
  position: absolute;
  top: 0;
  left: 20rpx;
  border-radius: 8rpx;
  width: 80rpx;
  overflow: hidden;
  text-align: center;
}
.date-month{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background: #000;
  color: #fff;
}
.date-day{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background: rgb(244,244,244);
}
.event-title{
  font-size: 32rpx;
  margin: 20rpx 0 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  max-height: 100rpx;
  line-height: 50rpx;
}
.event-address{
  color: #999;
  margin-bottom: 10rpx;
}
/* 装备小图样式 */
.myequip-item{
  border-bottom: solid 2rpx #eee;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.myequip-img-wrap{
  position: relative;
  width: 256rpx;
  height: 144rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background: #e6e6e6;
}
.myequip-img{
  width: 256rpx;
  height: 144rpx;
  border-radius: 8rpx;  
}
.equip-default{
  width: 80rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.check-mark{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background:rgba(0,0,0,.4);
  height: 32rpx;
  line-height: 32rpx;
  color:#fff;
  font-size:20rpx;
  text-align: center;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.check-mark:before{
  position: absolute;
  content: '';
  width: 10rpx;
  height: 10rpx;
  background: #4196fa;
  top: 11rpx;
  left: 50%;
  margin-left: -50rpx;
  border-radius:5rpx;
}
.myequip-name{
  max-height: 80rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  overflow: hidden;
  flex: 1;
  display:-webkit-box;
}
.myequip-right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}