<!--event/event-result/event-result.wxml-->
<view class='success'>
  <image class='icon-success' src='/images/icon-success.png'></image>
  <block wx:if='{{event.payAudit}}'>
    <view class='success-font'>报名已受理</view>
    <view class='info'>请等待主理人审核</view>
  </block>
  <block wx:else>
    <view class='success-font'>报名成功</view>
  </block>
  <view class='btn-group2'>
    <button catchtap='showShare' class='button btn'>分享给好友</button>
    <navigator open-type="redirect" url='/event/event-ticket/event-ticket?orderId={{orderId}}' class='button btn btn-detail'>立即查看</navigator>
  </view> 
  <view wx:if='{{!event.payAudit}}' class='qrcode'>
    <view wx:if='{{qrcode}}' class='qrcode-success'>
      <image catchtap='showTicket' class='qrcode-img' src='{{qrcode}}'></image>
      <view>电子门票</view>
    </view>
    <view wx:else class='qrcode-fail'>
      <view>二维码获取失败</view>
      <view catchtap='getQrcode' class='get-qrcode'>重新获取门票</view>
    </view>
    
  </view>
</view>
<view wx:if='{{showTicket}}' class='ticket-wrap'>
  <view class='ticket-content'>
    <view wx:if='{{!qrcode}}' class='load'>加载中...</view>
    <image class='ticket-qrcode' mode='aspectFit' src='{{qrcode}}'></image>
    <view>电子门票</view>
    <view catchtap='showTicket' class='ticket-close'>×</view>
  </view>
</view>
<Share id='share' shareparams='{{event}}' sharetype='event'/>
<canvas canvas-id="myCanvas" style="position:absolute;left:-200%;width:100%;height:420rpx;"></canvas>

