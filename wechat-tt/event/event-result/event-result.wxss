/* 电子门票 */
.ticket-wrap{
  position: fixed;
  background: rgba(0,0,0,.5);
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 201;
}
.ticket-content{
  width: 656rpx;
  height: 754rpx;
  background: #fff;
  position: absolute;
  top: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  padding: 68rpx;
  box-sizing: border-box;
}
.ticket-qrcode{
  width: 520rpx;
  height: 520rpx;
  margin-bottom: 60rpx;
}
.load{
  position: absolute;
  top: 290rpx;
  left: 46%;
}
.ticket-close{
  position: absolute;
  bottom: -120rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 60rpx;
  color: #fff;
  border-radius: 50%;
  border:solid 4rpx #fff;
  font-size: 60rpx;
  line-height: 46rpx;
  text-align: center;
}