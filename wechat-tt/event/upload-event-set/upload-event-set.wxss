/* event/upload-event/upload-event.wxss */
.upload-event{
  padding-bottom: 120rpx;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  padding: 40rpx 30rpx 30rpx;
  box-shadow: 0 0 10rpx 3rpx inset rgb(246,246,246);
}
.party-set{
  display: flex;
  flex-wrap: wrap;
}
.type-item{
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border:solid 2rpx #000;
  border-radius: 8rpx;
  background: #fff;
  margin-right: 46rpx;
}
.type-item:first-child{
  margin-bottom: 30rpx;
}
.type-item:nth-child(3n){
  margin-right: 0;
}
.active{
  background: #000;
  color: #fff;
}
.padding-border{
  padding: 30rpx 30rpx 30rpx 60rpx;
  
  color: rgb(102,102,102);
}
.party-block{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.set{
  padding: 40rpx 30rpx 40rpx 60rpx;
  color: #666;
  box-shadow: 0 6rpx 10rpx 6rpx rgb(246,246,246);
  box-sizing: border-box;
}
.block-right{
  margin-left: 60rpx;
  color: #000;
}
.set-block{
  margin-top: 36rpx;
  position: relative;
  overflow: hidden;
}
.set-input .set-block{
  margin-top: 12rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.set-block-address .set-block{
  margin-top: 30rpx;
}
.set-input .arrow{
  top: 28rpx;
}
.arrow{
  width:10rpx;
  height: 10rpx;
  border-top: solid 2rpx #999;
  border-right: solid 2rpx #999;
  transform: rotate(45deg);
  float: right;
  margin-right: 8rpx;
  position: absolute;
  right: 0;
  top: 12rpx;
}
.date{
  font-size: 28rpx;
  margin-top: 30rpx;
  overflow: hidden;
  position: relative;
  padding-left: 30rpx;
}
.date .left{
  font-weight: normal;
}
.left{
  float: left;
  font-weight: 500;
  margin-right: 60rpx;
}
.right{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  text-align: right;
  position: relative;
  padding-right: 50rpx;
  box-sizing: border-box;
}
.place-gray{
  color: rgb(153,153,153);
}
.input{
  flex:1;
  text-align:right;
  margin-left:50rpx;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}
.placeholder{
  line-height: 60rpx;
  height: 60rpx;
  color: rgb(153,153,153);
}
.event-info{
  padding: 60rpx 30rpx 40rpx 0;
  text-align: right;
  color: rgb(153,153,153);
  font-size: 24rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.btn-group{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  border:solid 2rpx #000;
  overflow: hidden;
}
.btn-draft{
  width: 212rpx;
  background: #fff;
  color: #000;
}
.btn-submit{
  flex: 1;
  background: #000;
  color: #fff;
}

/* 草稿提示框 */
.show-wrap{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(0,0,0,.5);
  z-index: 999;
}
.show-content{
  width: 532rpx;
  height: 510rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform:translate(-50%,-50%); 
}
.show-img{
  width: 532rpx;
  height: 426rpx;
  padding: 20rpx;
  background: rgb(237,237,237);
  box-sizing: border-box;
  overflow: hidden
}
.show-img image{
  width: 100%;
  height: 100%;
}
.btn-show-group{
  width: 100%;
  display: flex;
}
.btn-show{
  flex: 1;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  color: rgb(153,153,153);
  font-size: 32rpx;
}
.btn-show:first-child{
  border-right: solid 2rpx #eee;
}