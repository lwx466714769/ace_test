/* event/upload-event/upload-event.wxss */
.upload-event{
  padding-bottom: 120rpx;
}
.equip-img-wrap{
  position: relative;
  background: #e6e6e6;
  width: 100%;
  height: 420rpx;
}
.equip-img-wrap .img-close{
  right: 30rpx;
  top: 30rpx;
}
.equip-img{
  width: 100%;
  height: 100%;
}
.equip-default{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.change-photo{
  width: 100%;
  height:420rpx;
  line-height: 420rpx;
  background:rgba(0,0,0,.3);
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  color: #fff;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  padding: 40rpx 30rpx 30rpx;
  box-shadow: 0 0 10rpx 3rpx inset rgb(246,246,246);
}
.input{
  width: 100%;
  height: 120rpx;
  font-size: 30rpx;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
  box-shadow: 0 6rpx 10rpx 6rpx rgb(246,246,246);
}
.area{
  width: 100%;
  height: 246rpx; 
  font-size: 30rpx;
  padding: 40rpx 30rpx 40rpx 60rpx;
  box-sizing: border-box;
  border-bottom: solid 2rpx rgb(246,246,246);
}
.event-img{
  padding: 0 30rpx;
}
.img-title{
  padding-top: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.img-title-text{
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}
.img-wrap{
  padding:30rpx 0;
}
.wx-img-bg{
  width: 200rpx; 
  height: 200rpx; 
}
.wx-img-box {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right:40rpx;
  margin-bottom: 16rpx;
}
.wx-img-box:nth-child(3n){
  margin: 0;
}
.wx-img-item {
  width: 100%;
  height: 100%;
}
.img-close {
  position:absolute;
  top:10rpx;
  right:10rpx;
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  border:solid 2rpx #fff;
  z-index: 1;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.button{
  margin: 0;
}