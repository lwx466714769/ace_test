/* club/album-detail/album-detail.wxss */
.album-detail{
  padding-bottom: 120rpx;
}
.title{
  padding: 30rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.total{
  padding: 30rpx;
}
.total-item{
  width: 164rpx;
  height: 164rpx;
  border-radius: 8rpx;
  margin-right: 11rpx;
  margin-bottom: 12rpx;
}
.total-item:nth-child(4n){
  margin-right: 0;
}
.order{
  color: #aaa;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.swiper-wrap{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left:0;
  right:0;
  background:#000;
  color: #fff;
  z-index: 101;
}
.swiper{
  width: 100%;
  height: 80%;
  position: relative;  
}
.swper-item{
  position: relative;
}
.img-wrap{
  width: 100%;
  height:100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.page{
  position: absolute;
  bottom: 164rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}
.report{
  font-size: 28rpx;
}
.photo-info{
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  display: flex;
  align-items: center;
  height: 104rpx;
  font-size: 24rpx;
}
.photo-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: solid 2rpx #fff;
  margin-right: 30rpx;
}
.photo-time{
  color: #aaa;
  margin-top: 10rpx;
}
