button{
  font-size: 28rpx;
  background: none;
  padding: 0;
  margin: 0;
  line-height: inherit;
  -webkit-tap-highlight-color:transparent;
}
.empty-wrap{
  margin-top: 150rpx;
}
.club{
  padding-bottom: 120rpx;
  width: 100%;
  overflow-x: hidden;
}
.head{
  position: relative;
}
.bg{
  width: 100%;
  height: 300rpx;
  background: #000;
}
.info-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 130rpx;
  position: relative;
  margin:0 30rpx 20rpx 230rpx;
}
.logo{
  width: 160rpx;
  height: 160rpx;
  border:solid 2rpx #fff;
  border-radius: 50%;
  margin-right: 40rpx;
  position: absolute;
  top: 258rpx;
  left: 30rpx;
}
.name{
  font-size: 36rpx;
  margin-bottom: 10rpx;
}
.address{
  color: #666;
}
.info{
  flex: 1;
}
/* 数量统计 */
.count-list{
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 40rpx;
  padding-bottom: 14rpx;
  position: relative;
}
.count-list .count-item{
  margin-right: 82rpx;
  display:flex;
  align-items:center;
}
.icon-count{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.album{
  padding: 10rpx 40rpx 10rpx 34rpx;
  color: #fff;
  border-radius: 25rpx;
  background: #000;
  position: absolute;
  right: -20rpx;
  top: 4rpx;
  display: flex;
  align-items: center;
}
.icon-album{
  width: 33rpx;
  height: 27rpx;
  margin-right: 12rpx;
}
/* 导航 */
.club-tab{
  position: relative;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.icon-search{
  display: inline;
}
.tab-icon{
  width: 32rpx;
  height: 32rpx;
  margin-left: 30rpx;
}
.scroll{
  width: 600rpx;
  white-space: nowrap;
  overflow: hidden; 
}
