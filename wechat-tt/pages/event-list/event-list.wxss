/* club/event/event.wxss */
/* 数据为空 */
.event {
  padding-bottom: 120rpx;
}
.empty-wrap{
  color: rgb(153, 153, 153);
  text-align: center;
  margin: 150rpx auto 0;
  font-size: 28rpx;
}
.icon-empty-default{
  width: 112rpx;
  height: 112rpx;
  margin-bottom: 20rpx;
}
/* 是否显示全部 */
.show-all{
  text-align: center;
  color: rgb(153, 153, 153);
  padding: 30rpx;
}
.icon-filter{
  width: 30rpx;
  height: 26rpx;
  margin-right: 50rpx;
}
.type-bar{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  position: relative;
  background: #fff;
  align-items: center;
}
.event-type{
  margin-right: 64rpx;
  color: rgb(151,151,151);
  position: relative;
  padding-right: 34rpx;
}
.event-type:after{
  content:'';
  width:10rpx;
  height: 10rpx;
  border-bottom:solid 2rpx #999;
  border-right: solid 2px #999;
  transform: rotate(45deg);
  position: absolute;
  right:0;
  top:40rpx;
}
.type-bar .active{
  color:#000;
}
.type-bar .active:after{
  content:'';
  width:10rpx;
  height: 10rpx;
  border-top:solid 2rpx #000;
  border-left: solid 2px #000;
  border-bottom: none;
  border-right: none;
  transform: rotate(45deg);
  position: absolute;
  right:0;
  top:50rpx;
}
/* 列表内容 */
.type-con{
  padding: 10rpx;
}
.type-list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.checked{
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}
.event-list{

}
.event-item{
  margin: 30rpx;
  padding: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(165,165,165,.2);
}
.event-img-wrap{
  width: 100%;
  height: 364rpx;
  position: relative;
}
.event-img{
  width: 100%;
  height: 100%;
}
.event-state{
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  background: #000;
  color: #fff;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
}
.state-start{
  background: rgb(208,2,27);
}
.event-date{
  position: absolute;
  top: 0;
  left: 20rpx;
  border-radius: 8rpx;
  width: 80rpx;
  overflow: hidden;
  text-align: center;
}
.date-month{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background: #000;
  color: #fff;
}
.date-day{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background: rgb(244,244,244);
}
.event-title{
  font-size: 32rpx;
  margin: 20rpx 0 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  max-height: 100rpx;
  line-height: 50rpx;
}
.event-address{
  color: #999;
  margin-bottom: 10rpx;
}
/* 发布攒局 */
.icon-join{
  width: 112rpx;
  height: 112rpx;
  position: fixed;
  right: 40rpx;
  bottom: 188rpx;
  z-index: 2;
}
.icon-join image{
  width: 112rpx;
  height: 112rpx;
}
