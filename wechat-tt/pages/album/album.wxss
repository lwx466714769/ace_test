/* club/album/album.wxss */
.title{
  padding: 30rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow{
  width:12rpx;
  height: 12rpx;
  border-top: solid 4rpx #999;
  border-right: solid 4rpx #999;
  transform: rotate(45deg);
  margin-right: 6rpx;
  margin-left: 6rpx;
}
.btn-share{
  width: 36rpx;
  height: 36rpx;
}
.icon-share{
  width: 32rpx;
  height: 32rpx;
}
.total{
  padding:0 30rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.total-item{
  width: 164rpx;
  height: 164rpx;
  border-radius: 8rpx;
  margin-right: 11rpx;
  margin-bottom: 12rpx;
}
.total-item:nth-child(4n){
  margin-right: 0;
}
.item-add{
  width: 164rpx;
  height: 164rpx;
  border-radius: 8rpx;
  margin-bottom: 18rpx;
  display: inline-block;
}
.item-add image{
  width: 164rpx;
  height: 164rpx;
}
.album-title{
  padding: 30rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order{
  color: #aaa;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.arrow-down{
  width:12rpx;
  height: 12rpx;
  border-bottom: solid 4rpx #999;
  border-right: solid 4rpx #999;
  transform: rotate(45deg);
  margin-right: 6rpx;
  margin-left: 20rpx;
}
/* 筛选 */
.filter-wrap{
  position: fixed;
  bottom: 0;
  left: 0;
  top: 0;
  right: 0;
  z-index: 200;
  width:100%;
  background: rgba(0,0,0,.5);
}
.filter-type{
  width: 100%;
  height: 452rpx;
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
}
.filter-title{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: solid 2rpx rgb(246,246,246);
}
.filter-list{
  height: 350rpx;
  overflow-y: scroll;
}
.filter-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.checked{
  width: 40rpx;
  height: 40rpx;
}