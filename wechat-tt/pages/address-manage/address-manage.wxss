/* pages/address-manage/address-manage.wxss */
page{
  padding: 60rpx 30rpx 30rpx 60rpx;
  box-sizing: border-box;
}
.top{
  display: flex;
}
.top-left{
  flex:1;
  text-align: left;
  font-size: 32rpx;
}
.top-right{
  flex:1;
  text-align: right;
  font-size: 28rpx;
  color: #666666;
  padding: 0;
  margin: 0;
  line-height: inherit;
}
.del-address{
  width:35rpx;
  height:35rpx;
}
.address-block{
  flex:1;
  padding-right: 30rpx;
}
.address-item{
  display: flex;
  align-items: center;
  margin-top: 60rpx;
  color: #666666;
}
.name{
  margin-right: 40rpx;
  margin-bottom: 10rpx;
}
.btn-group{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  border:solid 2rpx #000;
  overflow: hidden;
}
.btn-submit{
  flex: 1;
  background: #000;
  color: #fff;
}
.btn_center{
  align-items: center;
  justify-content: center;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.checked-img{
  width: 28rpx;
  height: 28rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.check-img{
  width: 26rpx;
  height: 26rpx;
  margin-right: 29rpx;
  border-radius: 50%;
  border:solid 2rpx #aaa;
}