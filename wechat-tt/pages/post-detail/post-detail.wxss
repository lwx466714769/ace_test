.animation{
  animation: show 1s linear;
}
@keyframes show{
  0%{
    opacity: 0
  }
  100%{
    opacity: 1
  }
}
.animation1{
  display: none;
  animation: show1 1s linear;
}
@keyframes show1{
  0%{
    opacity: 1
  }
  100%{
    opacity: 0
  }
}
.comment-img-list{
  display: flex;
  margin-top: 10rpx;
}