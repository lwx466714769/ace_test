.back-club{
  position: fixed;
  top: 0;
  left: 0;
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: rgb(153, 153, 153);
  border-bottom: solid 2rpx rgb(153, 153, 153);
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}
.club-left{
  display: flex;
  align-items: center;
}
.club-logo{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.back-club-font{
  text-decoration: underline;
  font-size: 24rpx;
}
