.head_title{
  padding: 30rpx 0 30rpx 28rpx;
  font-size: 32rpx;
  position: relative;
  border-bottom: solid 2rpx #d8d8d8;
  margin:0 30rpx;
}
.head_title:before{
  position: absolute;
  left:0;
  top:34rpx;
  content:'';
  width:8rpx;
  height: 32rpx;
  background: #000;
}
/* 阅读 */
.read{
  
}

.read_list {
  display: flex;
  padding: 30rpx 0;
  border-bottom: solid 2rpx #d8d8d8;
  margin: 0 30rpx;
}
.read_list:last-child{
  border-bottom:none;
}
.read_list .list_con{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list_img{
  width:260rpx;
  height: 146rpx;
  margin-left: 60rpx;
}
.list_con .list_top{
  font-size: 28rpx;
  line-height: 40rpx;
}
.list_con .list_bot{
  display: flex;
  justify-content:space-between;
  margin-top: 26rpx;
  color: #999;
}
.post-del-con{
  color:rgb(153, 153, 153);
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
}
.post-del{
  width: 140rpx;
  height: 120rpx;
  display: block;
  margin: 0 auto 30rpx;
}
/* 评论 */
.empty-wrap{
  margin:20rpx auto 30rpx;
}
.icon-empty-default{
  width: 120rpx;
  height: 102rpx;
}
.empty_comment{
  padding:60rpx 0;
  text-align:center;
}
.comment{
  padding: 20rpx;
}
.comment_list{
  width:100%;
  display: flex;
  padding: 30rpx 0;
  border-bottom: solid 2rpx #d8d8d8;
}
.comment_list .comment_head{
  width:70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  display: block;
  border: solid 2rpx #eee;
}
.comment_con{
  flex: 1;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.comment_con .name{
  font-size: 28rpx;
}
.comment_con .center{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  align-items: center;
}
.comment_con .center .time{
  color: #999;
  font-size: 24rpx;
}

.del-comment{
  color: #999;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.del{
  margin-left: 10rpx;
}
.operation image{
  width:28rpx;
  height: 28rpx;
  vertical-align: middle;
}
.comment_con .operation{
  display: flex;
}
.comment_con .operation image{
  margin-right: 10rpx;
}
.comment_con .msg{
  margin-left: 30rpx;
}
.con{
  margin-top: 12rpx;
}
.comment_con .con text{
  font-size: 28rpx;
  display: block; 
  margin:20rpx 0;
}
.comment_con .con image{
  width:132rpx;
  height: 132rpx;
  margin-right: 24rpx;
  margin-bottom: 12rpx;
}
.comment_con .con image:nth-child(4n){
  margin-right: 0;
}
.video{
  width:100%;
}
/* footer */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.operation-group{
  display: flex;
  flex: 1;
}
.operation-view{
  display: flex;
  align-items: center;
}
.icon-share{
  width: 32rpx;
  height: 32rpx;
  margin-right: 14rpx;
  opacity: .4;
}
.operation-view:first-child{
  margin-right: 20rpx;
}
.operation-num{
  width: 80rpx;
  font-size: 24rpx;
  text-align: left;
  color: #666;
}
.btn-gray{
  color: #999;
}
.show_all{
  color: #999;
  text-align: center;
  padding: 20rpx 0;
}
.like{
  padding:20rpx;
}
.share{
  background: none;
  border:none;
  padding:20rpx;
}
.share:after{
  border:none;
}
.club_logo{
  background: #fff;
  width:100%;
  height: 164rpx;
  position: fixed;
  bottom:0;
  left:0;
  text-align: center;
  border-top: solid 2rpx #d8d8d8;
}
.logo{
  width:80rpx;
  height: 80rpx;
  border-radius: 50%;
  border:solid 2rpx #fff;
  position: absolute;
  top:-40rpx;
  left:50%;
  margin-left: -40rpx;
}
.club_logo .name{
  margin-top: 60rpx;
}
