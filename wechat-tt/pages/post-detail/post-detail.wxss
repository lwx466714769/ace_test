.detail{
  width:100%;
  height:100%;
  background: #fff;
  padding-bottom: 120rpx;
}
.shareBot{
  padding-bottom:180rpx;
}
.chunk{
  width:100%;
  height: 10rpx;
  background: #f6f6f6;
}
.post-headimg{
  width: 100%;
  height: 390rpx;
  display: block;
}
.header{
  width:100%;
  box-sizing: border-box;
}
.post-title{
  font-size: 36rpx;
  line-height: 52rpx;
  word-break:break-all;
  margin-bottom: 20rpx;
  display: block;
}
.profile{
  width:100%; 
  padding: 40rpx 30rpx;
  border-bottom: solid 2rpx rgb(242, 242, 242);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.head-left{
  position: relative;
}
.icon-identity{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  position: absolute;
  right:20rpx;
  top: 0;
  z-index: 10;
}
.head{
  width:92rpx;
  height: 92rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
  border: solid 2rpx #eee;
}
.profile-info{
  flex: 1;
}
.nickname{
  font-weight: bold;
  margin-bottom: 10rpx;
}
.fans{
  font-size: 24rpx;
  color: #666;
}
.fans text{
  margin-right: 30rpx;
}
.del-post{
  width:30rpx;
  height: 36rpx;
}
.btn-follow{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  font-size: 24rpx;
  margin-top: 46rpx;
  color: rgb(51,51,51);
  margin: 0;
  border: solid 2rpx rgb(51,51,51);
  -webkit-tap-highlight-color: transparent;
}
.content{
  margin:40rpx 30rpx;
}
.from{
  display: flex;
  justify-content: space-between;
  margin:20rpx 0 30rpx;
  align-items: center;
  color: #999;
}
.post-club{
  color: rgb(59, 148, 253);
  display: inline;
}
.report{
  font-size: 24rpx;
}
.post_summary{
  display: block;
  font-size: 32rpx;
  color: rgb(102,102,102);
}
