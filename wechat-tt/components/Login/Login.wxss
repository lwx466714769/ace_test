.mask {
  position: fixed;
  z-index: 100;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
}

.confirm {
  position: fixed;
  z-index: 500;
  width: 100%;
  background: #fff;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 4rpx 4rpx 30rpx #c0c0c0;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}

.title {
  font-size: 28rpx;
  padding: 36rpx 36rpx;
  background-color: white;
  color: #2a2a2a;
  text-align: left;
}

.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.5);
  justify-content: center;
  z-index: 100;
}

.header {
  position: relative;
}

.wrapper {
  position: relative;
  padding: 40rpx;
}

.verify {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 12rpx;
  color: white;
  width: 200rpx;
  display: block;
  text-align: center;
  background: rgb(133, 133, 133);
}

.item {
  position: relative;
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  margin-bottom: 60rpx;
  background: rgb(241, 241, 241);
  box-sizing: border-box;
}

.item__image {
  width: 30rpx;
  height: 39rpx;
  margin-right: 20rpx;
}

.item__input {
  width:340rpx;
  padding: 6rpx 0 6rpx 20rpx;
}

.placeholder {
  font-size: 14px;
  color: #d4d3d6;
}

.error__phone {
  position: absolute;
  left: 52rpx;
  bottom: -40rpx;
  color: #fb2d2d;
  font-size: 24rpx;
  transition: all 0.3s ease-in;
}

.handle-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #fff;
  background-color: #2a2a2a;
  margin: 0;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.close-btn {
  position: absolute;
  top: 26rpx;
  right: 20rpx;
  color: black;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  font-size: 48rpx;
  justify-content: center;
  align-items: center;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.item .left{
  float: left;
  height: 80rpx;
  background: #2a2a2a;
  color: white;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.item .back{
  width: 40%;
}
.item .loginBtn{
  width: 40%;
}
.item .line{
  width: 20%;
}

.header .line{
  position: absolute;
  top: 100rpx;
  left: 40rpx;
  width: 40rpx;
  height: 4rpx;
  background: #2a2a2a;
}