/* components/share/share.wxss */
/* 分享 */
.share-wrap-bg{
  position: fixed;
  bottom: 0;
  left: 0;
  top: 0;
  right: 0;
  z-index: 801;
  width:100%;
  background: rgba(0,0,0,.5);
}
.share-wrap{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 280rpx;
  background: #fff;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.share-list{ 
  display: flex;
  justify-content: space-around;
  text-align: center;
  
}
.icon-share-img{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin:0 auto 20rpx;
  display: block;
}
.share-text{
  color: #666;
}
.share-cancel{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 30rpx;
  text-align: center;
}
/* 分享朋友圈 图 */
/* 分享朋友圈 */
.canvas{
  position: fixed;
  left: -100%;
  top:0;
  background: #000;
  width: 600rpx;
  height: 800rpx;
}
.canvas-preview{
  position: absolute;
  top:70rpx;
  left:50%;
  margin-left: -300rpx;
  width: 600rpx;
  height: 800rpx;
  border-radius: 8rpx;
  background: #fff;
}
.canvas-img{
  width: 600rpx;
  height: 800rpx;  
}
.save-img{
  position: absolute;
  top: 492rpx;
  left: 132rpx;
  width: 338rpx;
  height: 142rpx;
  line-height: 142rpx;
  background: rgba(0,0,0,.5);
  color: #fff;
  z-index: 9999999;
}
.share-friend{

}

.img-wrap{
  background: #000;
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
}
.img{
  position: absolute;
  left: 0;
  top: -60rpx;
  width: 100%;
}
.tap{
  position: absolute;
  background: #fff;
  top: 1100rpx;
  z-index: 9999;
  width: 300rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 50rpx;
  left:50%;
  transform: translate(-50%);
}
.tap:after{
  position: absolute;
  content:'';
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  left: 140rpx;
  bottom: 60rpx;
  transform: rotate(45deg);
  z-index: 999;
}