/* 长文 */
@import '../app.wxss';
.card{
  padding: 30rpx 30rpx 0;
  box-shadow: 0 2rpx 6rpx rgb(220,220,220);
  margin:0 30rpx;
  background: #fff;
  box-sizing: border-box;
}
.short-card{
  margin-bottom: 40rpx;
}
.post-head{
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
  border: solid 2rpx #eee;
}
.card_top{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.title{
  font-size: 32rpx;
  line-height: 48rpx;
  max-height: 90rpx;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  overflow: hidden;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  word-break:break-all;
  color: #333;
}
.card_con .imgs{
  margin-top: 30rpx;
}
.card_con .imgs image{
  display: block;
  margin-bottom:2rpx;
}
.card_con .img_1{
  width:100%;
  height: 356rpx;
}
.card_con .imgs_2{
  display: flex;
}
.card_con .imgs .onlyTwo{
  height: 356rpx;
}
.card_con .img_2{
  flex:1;
  height: 226rpx;
  margin-right: 2rpx;
}
.card_con .img_3{
  width:226rpx;
  height: 226rpx;
  position: relative;
}
.card_con .img_3 .label{
  width:160rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 50rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  right:-20rpx;
  bottom:10rpx;
  background: rgba(0,0,0,.5); 
}
.tags{
  padding:20rpx 0;
  word-break:break-all;
}
.tags .tag{
  color: rgb(153,153,153);
  margin-right: 16rpx;

}
.card .operation{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
}
.card .operation view,.card .operation .user{
  flex:1;
  text-align: center;
}
.operation image{
  width:28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  flex: 1;
  vertical-align: middle;
}
/* 长文 */
.long_card{
  position: relative;
  margin-bottom: 10rpx;
}
.background-wrap{
  position: relative;
}
.background{
  width:100%;
  height: 420rpx;
}
.background-opacity{
  width: 100%;
  height: 420rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.3);
}
.long_card .card{
  width:690rpx;
  transform: translateY(-30rpx);
  margin-left: 30rpx;
}

/* 精品推荐 */
.ride .card_top{
  position: relative;
}
.place{
  position: absolute;
  width:48rpx;
  height: 54rpx;
  right:0;
  top:3rpx;
}
.ride .title{
  padding:30rpx 0;
  border-bottom: solid 2rpx rgb(216,216,216);
}
.ride .imgs{
  position: relative;
  overflow: hidden;
}
.ride .imgs .recommend{
  width:200rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 50rpx;
  color: #fff;
  text-align: left;
  position: absolute;
  right:-16rpx;
  top:46rpx;
  background: rgba(0,0,0,.6); 
  
}
.ride .recommend image{
  width:36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 4rpx;
  display: inline-block;
  margin-left: 15rpx;
}
.share{
  background: none;
  border:none;
  flex:1;
  padding:0;
}
.share:after{
  border:none;
}
/* 视频 */
.video-wrap{
  position: relative;
  width:100%;
  height: 420rpx;
}
.video-play{
  width:88rpx;
  height: 88rpx;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}

/* 俱乐部热议样式 */
.card1{
  margin: 30rpx;
  color: #aaa;
}
.card1 .post-con{
  padding-top: 30rpx;
}
.icon-list{
  margin-top:30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.icon-list-item{
  display: flex;
}
.icon-list button{
  border-radius: 0;
}
.post-share{
  width:32rpx;
  height:32rpx;
  display:inline-block;
  border-radius:0;
}
.icon-post{
  width: 34rpx;
  height: 32rpx;
  margin-right: 50rpx;
}
.icon-little{
 width: 32rpx;
 height: 32rpx;
}
.zan-count{
  color: #333;
}
.icon-vote{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.comment-item{
  margin-bottom: 10rpx;
}
.comment-name{
  color: rgb(49,140,247);
}
.long_card1{
  color: #aaa;
}
.long_card1 .card{
  width:690rpx;
  transform: translateY(-30rpx);
  margin-left: 30rpx;
  padding: 30rpx;
}
.long_card1 .no-background{
  transform: translateY(0);
}
.post-text{
  color: #666;
  margin-top:20rpx;
  display: block;
  max-height: 80rpx;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  overflow: hidden;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  letter-spacing: 2.4rpx;
  word-break: break-all;
  text-align:justify;
  display: -webkit-box;
  line-height: 40rpx;
}

/* 装备 */
.equip-item{
  position: relative;
}
.checked-img{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.check-mark{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  z-index: 9;
  display: flex;
}
.equip-img-wrap{
  position: relative;
  background: #e6e6e6;
  width: 100%;
  height: 420rpx;
}
.equip-img{
  width: 100%;
  height: 420rpx;
}
.equip-default{
  width: 184rpx;
  height: 138rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.change-photo{
  width: 100%;
  height: 96rpx;
  background: -webkit-linear-gradient(top,rgba(0,0,0,.3) 10%,rgba(0,0,0,.2),rgba(0,0,0,0) 90%);
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
}
.equip-photo{
  width: 46rpx;
  height: 36rpx;
  margin:0 30rpx 0 20rpx;
}
.equip-con{
  border-radius: 20rpx;
  transform: translateY(-30rpx);
  box-shadow: 0 0 5rpx 5rpx rgba(165,165,165,.2);
  background: #fff;
  padding: 0 30rpx;
}
.user-info{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx;
}
.equip-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.equip-name{
  padding: 0 20rpx 20rpx;
  font-size: 32rpx;
}

.car{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999;
  padding: 0 20rpx 30rpx;
}
.car-right{
  display: flex;
  align-items: center;
}
.car-list{
  position: relative;
  display: flex;
}
.car-img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border:solid 2rpx #fff;
  margin-left: -16rpx;
}
.arrow{
  width:10rpx;
  height:10rpx;
  border-top:solid 4rpx #999;
  border-right:solid 4rpx #999;
  transform:rotate(45deg);
  margin-left:20rpx;

}
.equip-icon-list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 76rpx;
  padding: 0 20rpx;
  /* border-top: solid 2rpx rgb(242, 242, 242); */
}
.equip-like-list{
  display: flex;
}
.icon-item{
  width: 150rpx;
  height: 76rpx;
  display: flex;
  align-items: center;

}
.icon-img{
  width: 34rpx;
  height: 34rpx;
  margin-right: 18rpx;
  opacity: .5;
}
.equip-collect{
  opacity: .5;
  width: 38rpx;
  height: 38rpx;
}
.equip-del{
  margin-left: 50rpx;
  width: auto;
}
.equip-del .icon-img{
  width: 36rpx;
  height: 36rpx;
  margin-right: 0; 
}

/* 图标名样式 */
.icon-name-wrap{
  display: flex;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.name-one{
  width: 12rpx;
  height: 40rpx;
  background:#22b472;
  transform: skew(-5deg);
  margin-right: 4rpx;
}
.name-two{
  height: 40rpx;
  line-height: 40rpx;
  transform: skew(-5deg);
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  background: #22b472;
  padding: 0 10rpx;
}
/* 投票选择列表样式 */
.vote-item-list{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 72rpx;
}
.vote-item{
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  
}
.vote-item-one{
  width: 6rpx;
  height: 36rpx;
  transform: skew(-5deg);
  opacity: .7;
  margin-right: 8rpx;
}
.vote-item-two{
  width: 16rpx;
  height: 36rpx;
  transform: skew(-5deg);
  opacity: .7;
  margin-right: 20rpx;
}
.vote-item-con{
  width: 400rpx;
  height: 36rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
  font-size: 24rpx;
  white-space: nowrap;
  word-break: break-all;
}
/* 攒局日期 */
.party-date{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 100rpx;
}
.party-start{
  margin-bottom: 20rpx;
  transform: skew(-5deg);
}
.party-end{
  margin-left: 100rpx;
  transform: skew(-5deg);
}
.start-color{
  background: #7ED321;
}
.end-color{
  background: #D0021B;
}
.party-start-time{
  display: flex;
  align-items: center;
  
}
.party-time-one{
  width: 6rpx;
  height: 36rpx;
  margin-right: 8rpx;
  
}
.party-time-two{
  width: 16rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.party-time-con{
  font-size: 48rpx;
  color: #fff;
}
.party-start-date{
  display: flex;
  align-items: center;
  margin-left: 6rpx;
}
.party-date-one{
  width: 4rpx;
  height: 24rpx;
  opacity: .4;
  margin-right: 8rpx;
}
.party-date-two{
  width: 10rpx;
  height: 24rpx;
  opacity: .4;
  margin-right: 20rpx;
}
.party-date-con{
  font-size: 32rpx;
  color: rgb(153,153,153);
}

/* 活动 */
.event-item{
  margin: 30rpx;
  padding: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(165,165,165,.2);
}
.event-img-wrap{
  width: 100%;
  height: 364rpx;
  position: relative;
}
.event-img{
  width: 100%;
  height: 100%;
}
.event-state{
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  background: #000;
  color: #fff;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
}
.state-start{
  background: rgb(208,2,27);
}
.event-date{
  position: absolute;
  top: 0;
  left: 20rpx;
  border-radius: 8rpx;
  width: 80rpx;
  overflow: hidden;
  text-align: center;
}
.date-month{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background: #000;
  color: #fff;
}
.date-day{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background: rgb(244,244,244);
}
.event-title{
  font-size: 32rpx;
  margin: 20rpx 0 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  max-height: 100rpx;
  line-height: 50rpx;
}
.event-address{
  color: #999;
  margin-bottom: 10rpx;
}