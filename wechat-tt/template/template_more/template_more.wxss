.big {
   background: -webkit-linear-gradient(left, transparent, rgba(0, 0, 0, 0.5), transparent) 0 160rpx/100% 90rpx no-repeat;
}

.cardbag {
   position: relative;
   width: 710rpx;
   padding-bottom: 20rpx;
}

.cardbag-wrap::after, .middle::after, .middle-wrap::after {
   height: 0;
   width: 0;
   visibility: visible;
   display: block;
   clear: both;
   content: '';
}

.card-big {
   width: 540rpx;
   height: 296rpx;
   overflow: hidden;
   border-radius: 28rpx;
   box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.4);
   margin: 0 auto;
}

.cardBig {
   width: 100%;
   height: 100%;
}

.middle-wrap {
   /*width: 584rpx;*/
   margin: 0 auto;
}

.line {
   width: 50rpx;
   margin-bottom: 30rpx;
   border-bottom: 3rpx solid #2a2a2a;
}

.lineM {
   width: 24rpx;
   margin: 20rpx 0 0 0;
   border-bottom: 3rpx solid #2a2a2a;
}

.card-title {
   width: 540rpx;
   padding: 30rpx 0 40rpx;
   line-height: 30rpx;
   overflow: hidden;
   text-overflow: ellipsis;
   margin: 0 auto;
   word-wrap: break-word;
}

.card-title text {
   font-size: 28rpx;
   font-family: serif regular;
}

.card-middle {
   width: 270rpx;
   height: 148rpx;
   overflow: hidden;
   border-radius: 14rpx;
   box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.4);
   box-sizing: border-box;
}

.middletext {
   font-size: 24rpx;
   display: -webkit-box;
   word-break: break-all;
   text-overflow: ellipsis;
   white-space: normal;
   overflow: hidden;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;
   font-family: serif regular;
   margin: 20rpx 0 40rpx;
}

.card-title .text {
   font-size: 24rpx;
}

.middle .card-title {
   padding: 20rpx 0 40rpx;
}
.card-length {
   width: 710rpx;
   height: 182rpx;
   overflow: hidden;
   box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.4);
   box-sizing: border-box;
}

.mainSides {
   border-top: 3rpx solid #2a2a2a;
   position: absolute;
   height: 100%;
   left: 0rpx;
   top: 0rpx;
}

