.buy-wrap .card{
  width:540rpx;
  height: 296rpx;
  padding: 40rpx 68rpx 50rpx;
  border-bottom: solid 2rpx #000;
}
.buy-wrap .title{
  width:436rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  padding: 20rpx 0 40rpx;
}
.buy-wrap .type-title{
  height: 56rpx;
  line-height: 56rpx;
  background: #000;
  color: #fff;
  padding: 0 30rpx;
  justify-content: space-between;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  display: flex;
}
.buy-wrap .coupon-code{
  display: flex;
  padding:30rpx 0;
  border-bottom: solid 2rpx rgb(213,213,213);
}
.coupon-code .chunk-input{
  width:100%;
  height: 74rpx;
  line-height: 74rpx;
  padding: 0 30rpx;
  background: rgb(241,241,241);
  flex: 1;
}
.buy-wrap .coupon-btn{
  width: 202rpx;
  height: 74rpx;
  line-height: 74rpx;
  background: #000;
  color: #fff;
}
.buy-wrap .coupon{
  border-bottom: solid 2rpx #000;
  padding-bottom: 40rpx;
}
.buy-wrap .coupon-text{
  color: rgb(236,148,4);
}
.buy-wrap .coupon-title{
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  margin:20rpx 0;
}
.buy-wrap .coupon-title:after{
  content:'';
  width:50rpx;
  height: 2rpx;
  background: #000;
  position: absolute;
  left:0;
  top:70rpx;
}
.buy-wrap .info .upload-card{
  width:100%;
  height: 336rpx;
  background: rgb(241,241,241);
  box-shadow: 0 2rpx 6rpx rgb(220,220,220);
  position: relative;
}
.upload-card .text{
  width:124rpx;
  color: rgb(153,153,153);
  font-size: 24rpx;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.add{
  width:60rpx;
  height: 60rpx;
  position: relative;
  margin-left: 31rpx;
}
.upload-card .text .add:before{
  content: '';
  width:60rpx;
  height: 2rpx;
  left:0;
  top:30rpx;
  background: rgb(153,153,153);
  position: absolute;

}
.upload-card .text .add:after{
  content: '';
  width:2rpx;
  height: 60rpx;
  left:30rpx;
  top:0;
  background: rgb(153,153,153);
  position: absolute;
}
.submit-btn{
  height: 74rpx;
  line-height: 74rpx;
  background: #000;
  color: #fff;
  margin:40rpx 0;
}
.data-wrap{
  display: flex;
  justify-content: space-between;
}
.detail{
  background: #fff;
  width: 678rpx;
  border-top: 3rpx solid #2a2a2a;
}
.header{
  box-sizing: border-box;
}
.content{
  word-break: break-all;
}
.short-text{
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}
.video-wrap{
  width: 100%;
  height: 350rpx;
  display: inline-block;
  position: relative;
}