/* placeholder 样式 */
.input{
  color: rgb(153,153,153);
}
.chunk-type{
  height: 102rpx;
  line-height: 102rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 6rpx rgb(220,220,220);
  display: flex;
  justify-content: space-between;
}
.chunk-input{
  width:100%;
  height: 74rpx;
  line-height: 74rpx;
  padding: 0 30rpx;
  background: rgb(241,241,241);
  margin-bottom: 20rpx;
}
.chunk{
  width:100%;
  height: 10rpx;
  background: #f6f6f6;
  color:#f6f6f6;
}
.buy-wrap{
  display: flex;
  justify-content: space-between;
}
