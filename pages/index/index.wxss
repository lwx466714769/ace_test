page{
  height: 100%;
}
.index{
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  width:100%;
  height: 600rpx;
  position: relative;
  
}
.bg{
  width:100%;
  height: 400rpx;
  background: rgb(224, 222, 222);
}
.info{
  width:100%;
  position: absolute;
  z-index: 9;
  top:200rpx;
}
.info text{
  text-align: center;
  display: block;
}
.info .head{
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
  border:solid 1px #ccc;
  display: block;
  margin:0 auto;
}
.info .intro{
  width:74%;
  margin:0 auto;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  height: 30rpx;
  font-size: 24rpx;
}
.main{
  flex:1;
}
.content{
  
}
.footer{
  height: 100rpx;
  display: flex;
  justify-content: space-around;

}
.post{
  position: fixed;
  width:100rpx;
  height: 100rpx;
  right:20rpx;
  bottom:120rpx;
  border-radius: 50%;
  border:solid 1px #ccc;
}