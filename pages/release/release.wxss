/* pages/addimg/addimg.wxss */
.comment{
  width:96%;
  height: 200rpx;
  border:solid 1px #999;
  color:#666;
  margin:20rpx auto;
  box-sizing: border-box;
  padding:10rpx;
  font-size: 28rpx;
  
}
.wx-img-list {
  position: relative;
  font-size: 0;
}

.wx-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 22rpx;
}

.wx-img-tip {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 22rpx;
  color: #868686;
}

.wx-img-box {
  position: relative;
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin-right: 22rpx;
}

.wx-img-box:last-child {
  margin: 0;
}

.wx-img-item {
  width: 100%;
  height: 100%;
}

.wx-img-progress {
  position: absolute;
  width: 100%;
  bottom: 0;
}

.imgs-close {
  position:absolute;
  top:-20rpx;
  right:-20rpx;
  width:40rpx;
  height:40rpx;
  line-height:30rpx;
  text-align:center;
  color:#fff;
  border-radius:50%;
}

.wx-submit-btn {
  text-align: center;
  border-radius: 15rpx;
  background-color: #868686;
  color: #fff;
  font-size: 26rpx;
  transition:all 0.3s ease;
}

.wx-lock{
  background: #f99;
}