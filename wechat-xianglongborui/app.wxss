page {
  font-size: 28rpx;
  color: #2a2a2a;
  /* font-family: 'ltEng', 'ltChina', 'Times New Roman', Times, serif !important; *//* font: bold 28rpx 'ltEngBold', 'ltChinaBold'; */
  background: white;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
/* 活动详情内容样式 */
.detail-content{
  font-size: 28rpx;
  letter-spacing: 2.4rpx;
  line-height: 50rpx;
  margin:0 30rpx;
}
.detail-content .wxParse-p{
  margin:20rpx 0;
  font-size: 28rpx;
  letter-spacing: 2.4rpx;
  line-height: 50rpx;
}
.detail-content .post_img{
  margin-top: 20rpx;
  width: 100%;
}
/* 底部按钮样式 */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width:100%;
  height: 140rpx;
  background: #fff;
  border-top: solid 2rpx rgb(246,246,246);
  box-sizing: border-box;
  padding-top: 10rpx;
}

.footer-group button{
  border-radius: 0;
}
.btn-group{
  width: 692rpx;
  border: solid 2rpx #000;
  border-radius: 8rpx;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:0 auto; 
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.btn-small{
  width: 212rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  color: #000;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx; 
}
.btn-big{
  flex: 1;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  color: #fff;
  background: #000;
}
.footer .btn-group-more{
  border:none; 
}
.footer .btn-group-more .btn-big{
  border-radius: 8rpx;
  width: 400rpx;
  flex:none;
}
.footer .btn-group-more .btn{
  border-radius: 8rpx;
}
/* 帖子攒局标志背影色 */
.post-mark-bg{
  background: #22b472;
}
button {
  font-size: 28rpx;
  background: none;
  padding: 0;
  margin: 0;
  line-height: inherit;
  -webkit-tap-highlight-color:transparent;
}
/* 主色系 */
.mainColor{
  background: rgb(34,180,114)!important;
}
.red{
  color: #f00;
}
/* 字号 */
.size20{
  font-size: 20rpx;
}
.size24{
  font-size: 24rpx;
}
.size28{
  font-size: 28rpx;
}
.size32{
  font-size: 32rpx;
}
.size36{
  font-size: 36rpx;
}
.bold{
  font-weight: bold;
}
/* 标志 */
.check-mark{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  z-index: 9;
  display: flex;
}
.name-one{
  width: 12rpx;
  height: 40rpx;
  background:#22b472;
  transform: skew(-5deg);
  margin-right: 4rpx;
}
.name-two{
  height: 40rpx;
  line-height: 40rpx;
  transform: skew(-5deg);
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  background: #22b472;
  padding: 0 10rpx;
}
.show-all {
  color: #2a2a2a;
  padding: 30rpx 0;
  text-align: center;
  font-size: 24rpx;
  font-weight: lighter;
}

page.button-hover {
  background: transparent !important;
}


button::after {
  border: 0;
  padding: 0;
  margin: 0;
  line-height: 0;
}

/* 数据为空 */
.empty-wrap{
  color: rgb(153, 153, 153);
  text-align: center;
  margin: 40rpx auto;
  font-size: 28rpx;
}
.icon-empty-default{
  width: 112rpx;
  height: 112rpx;
  margin-bottom: 20rpx;
}
/* 导航固定 */
.tab-class{
  width: 100%;
  z-index: 999;
  position: fixed;
  top:0;
  left:0;
}
/* 标题带有黑色竖线 */
.block-title{
  font-weight: bold;
  position: relative;
  padding-left: 16rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 30rpx;
}
.block-title:before{
  position: absolute;
  width:4rpx;
  height: 20rpx;
  content:'';
  background: #000;
  left:0;
  top: 40rpx;
}
.canvas-img{
  width: 600rpx;
  height: 800rpx;
  position: absolute;
  top:102rpx;
  left:50%;
  margin-left: -300rpx;
  z-index: 999;
  border-radius: 8rpx;
}
.save-img{
  position: absolute;
  top: 596rpx;
  left: 208rpx;
  width: 338rpx;
  height: 142rpx;
  line-height: 142rpx;
  background: rgba(0,0,0,.4);
  color: #fff;
  z-index: 999;
}
/* 删除空白页 */
.del-detail-con{
  color:rgb(153, 153, 153);
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
}
.del-detail-img{
  width: 140rpx;
  height: 120rpx;
  display: block;
  margin: 0 auto 30rpx;
}