/* personal/personal/personal.wxss */
page{
  background: #efefef;
}
.head-bg{
  width: 100%;
  height: 400rpx;
  background: linear-gradient(90deg,rgba(89,130,193,1),rgba(142,82,192,1));
  position: relative;
  padding-top: 84rpx;
}
.head-img{
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto 6rpx;
  border-radius: 50%;
  display: block;
}
.head-name{
  text-align: center;
  color: #fff;
  font-size: 36rpx;
}
.list{
  width: 690rpx;
  position: absolute;
  left: 30rpx;
  background: #fff;
  border-radius: 8rpx;
  top: 280rpx;
}

/* 模块 */
.block{
  padding: 30rpx 0;
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: solid 2rpx rgb(242, 242, 242);
  align-items: center;
}
.block-text{
  flex: 1;
}
.icon{
  width: 24rpx;
  height: 24rpx;
  margin-right: 24rpx;
  vertical-align: middle;
}
.arrow{
  width:20rpx;
  height: 20rpx;
  border-top: solid 4rpx #999;
  border-right: solid 4rpx #999;
  transform: rotate(45deg);
  margin-right: 6rpx;
}