/* pages/main/main.wxss */
.main{
  width: 100%;
  padding-bottom: 140rpx;
  background: #efefef;
  color: #333;
}
.head{
  width: 100%;
}
.block{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.btn-join{
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  margin:50rpx 0;
  background: linear-gradient(90deg,rgba(84,138,193,1),rgba(117,82,193,1),rgba(147,82,192,1));
  color: #fff;
}
.join-num{
  text-align: center;
  margin: 30rpx 0;
  color: #7652c0;
  display: flex;
}
.num{
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
  margin-right: 6rpx;
  border-radius: 4rpx;
  background: #7652c0;
}
.join-head{
  background: rgba(98,114,193,1);
  border-radius: 8rpx;
  padding: 40rpx;
  display: flex;
  margin-bottom: 30rpx;
}
.join-head-img{
  width: 60rpx;
  height: 60rpx;
  margin-left: -20rpx;
  border-radius: 50%;
}
.title{
  font-size: 40rpx;
  margin:20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.more{
  font-size: 28rpx;
}
.brand-list{
 
}
.brand-img{
  width: 168rpx;
  height: 168rpx;
  margin-right: 6rpx;
  border-radius: 8rpx;
  margin-bottom: 6rpx;
}
.brand-img:nth-child(4n){
  margin-right: 0;
}
/* 特价车 */
.swiper{
  width: 100%;
  height: 360rpx;
}
.swiper-item{
  width: 100%;
  height: 360rpx;
}
.swiper-item image{
  width: 100%;
  height: 360rpx;
}

.safe{
  width: 100%;
  height: 360rpx;
  margin:0 auto;
}
/* 权益 */
.card-list{
  box-sizing: border-box;

}
.card{
  width: 100%;
  height: 200rpx;
}
/* footer */
.footer{
  height: 100rpx;
  padding-top: 0;
}
.footer-content{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
  border-top: solid 1rpx #ddd;
}
.btn-inter{
  background:  linear-gradient(90deg,rgba(84,138,193,1),rgba(117,82,193,1),rgba(147,82,192,1));
  color: #fff;
  width: 440rpx;
  font-size: 32rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 30rpx;
}
.footer-right{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-wrap{
  flex: 1;
  display: flex;
  justify-content: center;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}
/* 产业链 */
.property{
  display: flex;

}
.property-img{
  width: 168rpx;
  height: 168rpx;
  margin-right: 6rpx;
}

/* 报名信息 */
.fixed-wrap{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgb(0,0,0,.4);
  z-index: 9999
}
.join-form{
  width: 690rpx;
  background: #fff;
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  padding: 90rpx 44rpx 80rpx;
  box-sizing: border-box;
}
.form-title{
  color: #8C58BE;
  margin-bottom: 90rpx;
  text-align: center;
  font-size: 32rpx;
}
.input-view{
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  border-bottom: solid 1rpx #E0E0E0;
  align-items: center;
}
.input{
  text-align: right;
}
.placeholder{
  color: #999;
}
.btn-form{
  width: 592rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin:50rpx auto 0;
  background: linear-gradient(90deg,rgba(84,138,193,1),rgba(117,82,193,1),rgba(147,82,192,1));
  color: #fff;
  border-radius: 8rpx;
}
.form-close{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border:solid 3rpx #8E8E8E;
  color: #8E8E8E;
  text-align: center;
  line-height: 48rpx;
  font-size: 30rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}